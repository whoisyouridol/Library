@model IEnumerable<LibraryProject.ViewModels.BooksViewModel>
<table class="table table-hover">
    <thead>
    <th>Author</th>
    <th>Genre</th>
    <th>Publisher</th>
    <th>Free</th>
    <th>Delete</th>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Author</td>
            <td>@book.Genre</td>
            <td>@book.Publisher</td>
               @if (book.IsAllowed)
               {
                   <td>Yes</td>
               }
               else
               {
                   <td>No</td>
               }
               <td>
                   <form asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id">
                       <button type="submit" class="btn btn-danger">
                           Delete
                       </button>
                   </form>
               </td>
        </tr>
    }
    </tbody>
</table>