@model List<ApplicationUser>
<a asp-action="Create">Create new customer</a>
    <table class="table table-hover">
        <thead>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Email</td>
                    <td>
                        <form asp-controller="Customers" asp-action="Edit" asp-route-id="@customer.Id" method ="get">
                            <button type="submit" class="btn btn-dark">
                                Edit
                            </button>
                        </form>
                    </td>
                    <td>
                        <form asp-controller="Customers" asp-action="Delete" asp-route-id="@customer.Id">
                            <button type="submit" class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
